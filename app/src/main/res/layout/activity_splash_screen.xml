<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".OnBoarding.SplashScreen">

    <ImageView
        android:id="@+id/fabyLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rectangleSplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <View
        android:id="@+id/rectangleSplash"
        android:layout_width="0dp"
        android:layout_height="315dp"
        android:background="@drawable/splash_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fabySplashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/grand_hotel"
        android:text="Finding a Better You"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangleSplash" />

    <ImageView
        android:id="@+id/calorieLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabySplashText"
        app:srcCompat="@drawable/calories" />

    <ImageView
        android:id="@+id/mensurationLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toStartOf="@+id/mesageLogoSplash"
        app:layout_constraintTop_toBottomOf="@+id/fabySplashText"
        app:srcCompat="@drawable/menstruation" />

    <ImageView
        android:id="@+id/moodLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="@+id/fabySplashText"
        app:layout_constraintTop_toBottomOf="@+id/fabySplashText"
        app:srcCompat="@drawable/mood" />

    <ImageView
        android:id="@+id/waterLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toEndOf="@+id/calorieLogoSplash"
        app:layout_constraintTop_toBottomOf="@+id/calorieLogoSplash"
        app:srcCompat="@drawable/water" />

    <ImageView
        android:id="@+id/mesageLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="@+id/moodLogoSplash"
        app:layout_constraintTop_toBottomOf="@+id/moodLogoSplash"
        app:srcCompat="@drawable/message" />
</androidx.constraintlayout.widget.ConstraintLayout>