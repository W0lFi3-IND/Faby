<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/gentium_book_basic"
            android:textColor="#519F4F"
            android:textStyle="bold"
            android:text="Your goal" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="36sp"
            android:layout_marginEnd="32dp"
            android:textColor="#519F4F"
            android:textStyle="bold"
            android:text="+" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/goalsSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFC107"
        android:max="5"
        android:min="1"
        android:outlineAmbientShadowColor="#FFA800"
        android:progress="1"
        android:progressBackgroundTint="#FFC107"
        android:progressTint="#FFC107"
        android:thumb="@drawable/mood" />

</LinearLayout>